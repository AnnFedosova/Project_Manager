<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="format_sql">true</property>


        <!-- Postgres database connection settings -->
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://pm-db-server.database.windows.net:1433;database=project-manager-DB</property>
        <property name="connection.username">leo</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>


        <!-- configuration pool via c3p0-->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>


        <!--Mapping-->
        <mapping class="dbService.entities.RequestEntity"/>
        <mapping class="dbService.entities.StateEntity"/>
        <mapping class="dbService.entities.ProjectEntity"/>
        <mapping class="dbService.entities.UserEntity"/>
        <mapping class="dbService.entities.PositionEntity"/>
        <mapping class="dbService.entities.ProjectPositionEntity"/>
        <mapping class="dbService.entities.PriorityEntity"/>
        <mapping class="dbService.entities.TaskEntity"/>
        <mapping class="dbService.entities.UserRoleEntity"/>
        <mapping class="dbService.entities.RoleEntity"/>
        <mapping class="dbService.entities.TaskEntity"/>
        <mapping class="dbService.entities.StateTransitionEntity"/>
    </session-factory>
</hibernate-configuration>
